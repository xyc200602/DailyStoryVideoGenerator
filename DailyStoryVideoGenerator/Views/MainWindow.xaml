<Window x:Class="DailyStoryVideoGenerator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="爽文视频自动生成器" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部菜单栏 -->
        <ToolBar Grid.Row="0" materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <Button ToolTip="配置设置" Command="{Binding NavigateToConfigCommand}">
                <materialDesign:PackIcon Kind="Settings" />
            </Button>
            <Separator/>
            <Button ToolTip="历史记录" Command="{Binding NavigateToHistoryCommand}">
                <materialDesign:PackIcon Kind="History" />
            </Button>
            <Separator/>
            <Button ToolTip="关于" Command="{Binding ShowAboutCommand}">
                <materialDesign:PackIcon Kind="Information" />
            </Button>
        </ToolBar>

        <!-- 主内容区 -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- 快速生成标签页 -->
            <TabItem Header="快速生成">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="快速生成爽文视频" Style="{DynamicResource MaterialDesignHeadline4}" Margin="0,0,0,20"/>

                        <!-- 自定义提示词 -->
                        <GroupBox Header="自定义提示词（可选）" Margin="0,0,0,20">
                            <StackPanel>
                                <CheckBox Content="使用自定义提示词" IsChecked="{Binding StoryConfig.UseCustomPrompt}" Margin="0,0,0,10"/>
                                <TextBox Text="{Binding StoryConfig.CustomPrompt}"
                                         materialDesign:HintAssist.Hint="输入自定义提示词..."
                                         Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                                         IsEnabled="{Binding StoryConfig.UseCustomPrompt}"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 故事配置 -->
                        <GroupBox Header="故事配置" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <ComboBox Grid.Row="0" Grid.Column="0"
                                          materialDesign:HintAssist.Hint="故事类型"
                                          ItemsSource="{Binding StoryTypes}"
                                          SelectedItem="{Binding StoryConfig.StoryType}"/>

                                <TextBox Grid.Row="0" Grid.Column="1"
                                         materialDesign:HintAssist.Hint="主角名字"
                                         Text="{Binding StoryConfig.ProtagonistName}"/>

                                <ComboBox Grid.Row="1" Grid.Column="0"
                                          materialDesign:HintAssist.Hint="背景设定"
                                          ItemsSource="{Binding Settings}"
                                          SelectedItem="{Binding StoryConfig.Setting}"/>

                                <TextBox Grid.Row="1" Grid.Column="1"
                                         materialDesign:HintAssist.Hint="目标字数"
                                         Text="{Binding StoryConfig.WordCount}"/>

                                <ComboBox Grid.Row="2" Grid.Column="0"
                                          materialDesign:HintAssist.Hint="文风风格"
                                          ItemsSource="{Binding Styles}"
                                          SelectedItem="{Binding StoryConfig.Style}"/>

                                <ComboBox Grid.Row="2" Grid.Column="1"
                                          materialDesign:HintAssist.Hint="语音类型"
                                          ItemsSource="{Binding VoiceTypes}"
                                          SelectedItem="{Binding VideoConfig.VoiceType}"/>

                                <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1"
                                         materialDesign:HintAssist.Hint="关键词（用逗号分隔）"
                                         Text="{Binding KeywordsText}"/>
                            </Grid>
                        </GroupBox>

                        <!-- 生成按钮 -->
                        <Button Content="立即生成"
                                Command="{Binding GenerateStoryCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,20"
                                Width="200">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Magic" Margin="0,0,10,0"/>
                                    <TextBlock Text="立即生成"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <!-- 生成进度 -->
                        <GroupBox Header="生成进度" Visibility="{Binding ShowProgress, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <ProgressBar Value="{Binding ProgressPercent}"
                                             Height="20"
                                             Margin="0,0,0,10"
                                             Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                                <TextBlock Text="{Binding ProgressMessage}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 生成结果 -->
                        <GroupBox Header="生成结果" Visibility="{Binding ShowResult, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="{Binding GeneratedStory.Title}"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Margin="0,0,0,10"/>
                                <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                                    <TextBlock Text="{Binding GeneratedStory.Content}"
                                               TextWrapping="Wrap"
                                               Padding="10"/>
                                </ScrollViewer>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                                    <Button Content="生成视频"
                                            Command="{Binding GenerateVideoCommand}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Margin="5">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Video" Margin="0,0,5,0"/>
                                                <TextBlock Text="生成视频"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <Button Content="上传B站"
                                            Command="{Binding UploadVideoCommand}"
                                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                                            Margin="5">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Upload" Margin="0,0,5,0"/>
                                                <TextBlock Text="上传B站"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 定时任务标签页 -->
            <TabItem Header="定时任务">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="定时任务设置" Style="{DynamicResource MaterialDesignHeadline4}" Margin="0,0,0,20"/>

                        <GroupBox Header="定时生成配置">
                            <StackPanel>
                                <CheckBox Content="启用定时任务" IsChecked="{Binding EnableSchedule}" Margin="0,0,0,20"/>

                                <TextBlock Text="生成时间:" Margin="0,0,0,5"/>
                                <materialDesign:TimePicker SelectedTime="{Binding ScheduleTime}" Width="200" HorizontalAlignment="Left"/>

                                <TextBlock Text="重复设置:" Margin="0,20,0,5"/>
                                <ComboBox ItemsSource="{Binding ScheduleTypes}"
                                          SelectedItem="{Binding ScheduleType}"
                                          Width="200" HorizontalAlignment="Left"/>

                                <Button Content="保存定时设置"
                                        Command="{Binding SaveScheduleCommand}"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Margin="0,20,0,0"
                                        Width="150" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="定时任务状态" Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding ScheduleStatus}" Margin="0,0,0,10"/>
                                <TextBlock Text="下次执行时间:" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding NextRunTime}" FontWeight="Bold"/>
                                <TextBlock Text="上次执行时间:" Margin="0,20,0,5"/>
                                <TextBlock Text="{Binding LastRunTime}" FontWeight="Bold"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- 底部状态栏 -->
        <StatusBar Grid.Row="2" materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Information" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding StatusMessage}"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar Width="100" Height="16" IsIndeterminate="{Binding IsBusy}" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>